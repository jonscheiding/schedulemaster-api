<html>
  <head>
    <title>Schedule Master Login</title>
    <script src="/dist/materialize.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0">
  </head>
  <body class="container">
    <div class="row">
      <div class="col s12 m8 offset-m2">
        <div class="card">
          <form method="POST">
            <div class="card-content">
              <span class="card-title">
                <b>Schedule Master</b>
                <img src="https://my.schedulemaster.com/images/smlogo.gif" class="right">
              </span>
              <p>Please login with your Schedule Master username and password.</p>
              <div class="row">
                <div class="input-field col s12">
                  <input id="username" name="username" value="{{username}}" type="text">
                  <label for="username">Username</label>
                </div>
                <div class="input-field col s12">
                  <input id="password" name="password" type="password">
                  <label for="password">Password</label>
                </div>
              </div>
              
              {{#loginFailed}}
                <div class="card alert">
                  <div class="card-content">
                    <p>Your username or password was incorrect.</p>
                  </div>
                </div>
              {{/loginFailed}}
              
            </div>
            <div class="card-action right-align">
              <input type="submit" value="Login" class="btn">
            </div>
          </form>
        </div>  
      </div>
    </div>
  </body>
</html>